<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FotoFragment">


    <ImageView
        android:id="@+id/imageView_caju"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/caju"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="CAZUZA"
        android:textColor="#000"
        android:gravity="bottom"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_caju"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_caju"
        app:layout_constraintTop_toTopOf="@+id/imageView_caju"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>